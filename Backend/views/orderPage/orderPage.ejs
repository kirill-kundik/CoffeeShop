<% include ../common/header.ejs %>


<div class="main-container container-fluid">
    <div class="row">
        <div class="contact-form">
            <div class="description-contact">
                Контактні дані
            </div>
            <div class="row">
                <div class="col-md-7">
                    <div class="form-horizontal">
                        <div class="form-group" id="nameGroup">
                            <div class="col-sm-2 control-label">
                                Ім'я
                            </div>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="inputName" placeholder="Ім'я">
                                <span class="help-block" id="error-name">Введіть тільки власне ім’я, без цифр,
                                    максимум 30 символів</span>
                            </div>

                        </div>

                        <div class="form-group" id="phoneGroup">
                            <div class="col-sm-2 control-label">
                                Телефон
                            </div>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="inputPhone" placeholder="+380123456789">
                                <div class="help-block" id="error-phone">Введіть номер телефону у форматі +380 або почніть з 0</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="order-next-step">
                    <a id="order-next" class="btn btn-default">
                        Далі
                        <i class="glyphicon glyphicon-chevron-right icon-white"></i>
                    </a>
                </div>
            </div>
            <div class="row">
                <div id="google-maps">
                    googleMaps here
                </div>
            </div>
        </div>
    </div>
</div>

